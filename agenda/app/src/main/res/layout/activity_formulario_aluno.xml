<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/activity_formulario_aluno_nome"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:inputType="textCapWords"
        android:hint="@string/nome"
        android:layout_height="wrap_content"
        android:importantForAutofill="no" />

    <EditText
       android:id="@+id/activity_formulario_aluno_telefone"
       android:layout_width="match_parent"
       android:layout_margin="8dp"
       android:hint="@string/telefone"
       android:layout_height="wrap_content"
        tools:ignore="TextFields"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/activity_formulario_aluno_telefone_fixo"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/telefone_fixo"
        android:layout_height="wrap_content"
        tools:ignore="TextFields"
        android:importantForAutofill="no" />

    <EditText
       android:id="@+id/activity_formulario_aluno_email"
       android:layout_width="match_parent"
       android:layout_margin="8dp"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
       android:layout_height="wrap_content"
        android:importantForAutofill="no" />

</androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>